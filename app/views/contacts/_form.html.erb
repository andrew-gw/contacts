<%= form_for @contact do |f| %>

  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@contact.errors.count, "error") %> prohibited
        this contact from being saved:
      </h2>
      <ul>
        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label 'fname', 'First Name' %><br>
    <%= f.text_field :fname, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'lname', 'Last Name' %><br>
    <%= f.text_field :lname, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'email', 'E-mail Address' %><br>
    <%= f.text_field :email, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'phone', 'Phone Number' %><br>
    <%= f.text_field :phone, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label 'avatar', 'Photo' %><br>
    <%= f.text_field :avatar, :class => "form-control" %>
  </div>

  <%= button_tag(type: 'submit', class: "btn btn-primary") do %>
   <i class="glyphicon glyphicon-ok"></i> Done
  <% end %>

<% end %>
