<% provide(:title, "Edit Contact") %>

<div class="page-header">
  <h1><%= yield :title %></h1>
  <%= link_to contact_path(@contact), :class => "btn btn-default" do %>
    <i class="glyphicon glyphicon-remove"></i> Cancel
  <% end %>
</div>

<%= render 'form' %>

<%= link_to contact_path(@contact), method: :delete,
      data: { confirm: 'Remove ' + @contact.name + '?' }, :class => "btn btn-danger" do %>
      <i class="glyphicon glyphicon-trash"></i> Remove
    <% end %>
