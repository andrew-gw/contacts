<div class="page-header">
  <h1>Contacts</h1>
  <%= link_to new_contact_path, :class => "btn btn-primary" do %>
    <span class="glyphicon glyphicon-plus"></span> Add Contact
  <% end %>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>E-mail</th>
    <th>Phone</th>
    <th>Avatar</th>
    <th colspan="3"></th>
  </tr>

  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.name %></td>
      <td><%= contact.email %></td>
      <td><%= contact.phone %></td>
      <td><%= contact.avatar %></td>
      <td><%= link_to 'Show', contact_path(contact), :class => "btn btn-default" %></td>
      <td>
        <%= link_to edit_contact_path(contact), :class => "btn btn-warning" do %>
          <span class="glyphicon glyphicon-edit"></span> Edit
        <% end %>
      </td>
      <td>
        <%= link_to contact_path(contact), method: :delete,
          data: { confirm: 'Delete ' + contact.fname + ' ' + contact.lname + '?' }, :class => "btn btn-danger" do %>
            <span class="glyphicon glyphicon-trash"></span> Remove
        <% end %>
      </td>
    </tr>
  <% end %>
</table>
