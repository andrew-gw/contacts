<h1>Listing contacts</h1>

<%= link_to new_contact_path, :class => "btn btn-primary" do %>
  <span class="glyphicon glyphicon-plus"></span> Add Contact
<% end %>

<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>E-mail</th>
    <th>Phone</th>
    <th>Avatar</th>
    <th colspan="3"></th>
  </tr>

  <% @contacts.each do |contact| %>
    <tr>
      <td><%= contact.fname %></td>
      <td><%= contact.lname %></td>
      <td><%= contact.email %></td>
      <td><%= contact.phone %></td>
      <td><%= contact.avatar %></td>
      <td><%= link_to 'Show', contact_path(contact), :class => "btn btn-default" %></td>
      <td><%= link_to 'Edit', edit_contact_path(contact), :class => "btn btn-warning" %></td>
      <td><%= link_to 'Destroy', contact_path(contact),
              method: :delete,
              data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %></td>
    </tr>
  <% end %>
</table>
