<p>
  <strong>First Name:</strong>
  <%= @contact.fname %>
</p>

<p>
  <strong>Last Name:</strong>
  <%= @contact.lname %>
</p>

<p>
  <strong>E-mail:</strong>
  <%= @contact.email %>
</p>

<p>
  <strong>Phone Number:</strong>
  <%= @contact.phone %>
</p>

<p>
  <strong>Photo:</strong>
  <%= @contact.avatar %>
</p>

<%= link_to 'Back', contacts_path, :class => "btn btn-default" %>
<%= link_to edit_contact_path(@contact), :class => "btn btn-warning" do %>
  <span class="glyphicon glyphicon-edit"></span> Edit
<% end %>
<%= link_to contact_path(@contact), method: :delete,
      data: { confirm: 'Delete ' + @contact.fname + ' ' + @contact.lname + '?' }, :class => "btn btn-danger" do %>
      <span class="glyphicon glyphicon-trash"></span> Remove
    <% end %>
