<% provide(:title, @contact.name) %>

<div class="page-header">
	<h1>Contact Details</h1>
	<%= link_to contacts_path, :class => "btn btn-default" do %>
	<span class="glyphicon glyphicon-chevron-left"></span> All Contacts
	<% end %>
</div>

<div class="row">

	<%= render 'shared/flash_messages' %>

	<div class="col-sm-1">
		<%= contact_avatar(@contact, class: 'media-object img-circle', style: 'width:96px;height:96px;') %>
	</div>

	<div class="col-sm-8 col-md-6 col-lg-5 col-sm-offset-1">

		<h3><%= @contact.name %></h3>

		<p>
			<%= @contact.email %>
		</p>

		<p>
			<%= @contact.phone %>
		</p>

		<p class="timestamp text-muted">
			Added <%= time_ago_in_words(@contact.created_at) %> ago
		</p>

		<%= link_to edit_contact_path(@contact), :class => "btn btn-warning" do %>
		<span class="glyphicon glyphicon-edit"></span> Edit
		<% end %>

		<%= link_to contact_path(@contact), method: :delete,
		data: { confirm: 'Remove ' + @contact.name + '?' }, :class => "btn btn-danger" do %>
		<span class="glyphicon glyphicon-trash"></span> Remove
		<% end %>

	</div>
</div>
